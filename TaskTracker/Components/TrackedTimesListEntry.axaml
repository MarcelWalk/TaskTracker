<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="50"
             Height="50"
             x:Class="TaskTracker.Components.TrackedTimesListEntry">
            
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <Label Grid.Column="0" Content="{Binding Title}" VerticalContentAlignment="Center" Margin="10,0,0,0"></Label>
    <Label Grid.Column="1" Content="{Binding TrackedTime}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10,0,10,0"></Label>
  </Grid>
</UserControl>
